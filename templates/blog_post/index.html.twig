{% extends 'layout.html.twig' %}

{% block title %}BlogPost index{% endblock %}

{% block header %}
    <h1>BlogPost index</h1>
{% endblock header %}

{% block content %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Content</th>
                <th>Date</th>
                <th>Category</th>
                <th>Featured</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_post in blog_posts %}
            <tr>
                <td>{{ blog_post.id }}</td>
                <td>{{ blog_post.title }}</td>
                <td>{{ blog_post.slug }}</td>
                <td>{{ blog_post.content }}</td>
                <td>{{ blog_post.date }}</td>
                <td>{{ blog_post.category }}</td>
                <td>{{ blog_post.Featured ? 'Yes' : 'No' }}</td>
                <td>
                    <ul>
                        <li><a href="{{ path('blog_post_show', {'id': blog_post.id}) }}">show</a></li>
                        <li><a href="{{ path('blog_post_edit', {'id': blog_post.id}) }}">edit</a></li>
                        <li><a href="{{ path('blog_post_delete_form', {'id': blog_post.id}) }}">delete</a></li>
                    </ul>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blog_post_new') }}">Create new</a>
{% endblock %}
